// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  username          String    @unique
  password          String
  isLoggedIn        Boolean   @default(false)
  calendar          Calendar?
  calendarId        Int?
  events            Event[]   @relation("UserEvents")
  preferredTimeZone String    @default("UTC")
  dailyStartTime    DateTime  @default("1970-01-01T09:00:00Z")
  dailyEndTime      DateTime  @default("1970-01-01T17:00:00Z")
}

model Calendar {
  id      Int     @id @default(autoincrement())
  name    String
  owner   User    @relation(fields: [ownerId], references: [id])
  ownerId Int     @unique
  events  Event[] @relation("CalendarEvents")
}

model Event {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  date        DateTime   @default(now())
  users       User[]     @relation("UserEvents")
  calendars   Calendar[] @relation("CalendarEvents")
}
